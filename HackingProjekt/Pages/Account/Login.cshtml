@page
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager
@model LoginModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-ig-4">

            <h1 class="mb-3">Login</h1>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.Email">Email eller Brugernavn</label>
                    <input type="text" asp-for="Model.Email" class="form-control" />
                    <span asp-validation-for="Model.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.Password">Password</label>
                    <input type="password" asp-for="Model.Password" class="form-control" />
                    <span asp-validation-for="Model.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="checkbox" asp-for="Model.RemeberMe" class="form-check-input"/>
                    <label class="form-check-label" asp-for="Model.RemeberMe"> Rember Me?</label>               
                </div>
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Login</button>

                </div>
            </form>


        </div>
    </div>
</div>
 