@page
@model RegisterModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
      <div class="col-sm-12 col-md-12 col-ig-4">

          <h1 class="mb-3">Register</h1>
          
          <form method="post">
              <div asp-validation-summary="All" class="text-danger"></div>
              <div class="mb-3">
                  <label class="form-label" asp-for="Re.Email">Email</label>
                  <input type="text" asp-for="Re.Email" class="form-control" />
                  <span asp-validation-for="Re.Email" class="text-danger"></span>           
              </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Re.Password">Password</label>
                    <input type="password" asp-for="Re.Password" class="form-control" />
                    <span asp-validation-for="Re.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Re.ConfirmPassword">ConfirmPassword</label>
                    <input type="password" asp-for="Re.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Re.ConfirmPassword" class="text-danger"></span>
                </div>
               <div class="mb-3">
                   <button type="submit" class="btn btn-primary">Register</button>
               </div>
          </form>


      </div>
    </div>


</div>    