@page
@model HackingProjekt.Pages.Account.AdminModel
@{
}

<div class="container mt-4">
    <h1 class="text-center">Alle Brugere</h1>

    <form class="mb-4">
        <div class="form-group">
            <label for="searchString">Title:</label>
            <input type="text" class="form-control" id="searchString" asp-for="SearchString" />
        </div>
        <button type="submit" class="btn btn-primary">Søg</button>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Users[0].UserName)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>
                        <a class="btn btn-danger" asp-page="./DeleteUser" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>